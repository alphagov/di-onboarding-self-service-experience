{% extends "layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "./macros/error-summary.njk" import errorSummary %}

{% set mainClasses = "govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-!-padding-top-6" %}

{% block pageTitle %}
  Add your service name GOV.UK Sign In
{% endblock %}


{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ errorSummary ({
          errors: errors,
          hrefs: {
            'serviceName': '#create-service-name'
          }
        }) }}

        <form class="form" action="/create-service-name-validation" method="post">

            {{ govukInput({
              label: {
                text: "Add your service name",
                isPageHeading: true,
                classes: "govuk-label--l"
              },
              hint: {
                text: "You can change this later"
              },
              name: "serviceNamee",
              id: "create-service-name",
              classes: "govuk-input--width-20",
              errorMessage: {
                text: errors.get('serviceName')
              } if errors else false,
              value: data['serviceName']
            }) }}

          {{ govukButton({
            text: "Continue"
          }) }}

        </form>

      </div>
    </div>
  </div>
{% endblock %}

